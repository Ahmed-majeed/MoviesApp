<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:id="@+id/cardView">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView
                android:layout_width="107dp"
                android:layout_height="121dp"
                android:contentDescription="@string/imagemove"
                android:id="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#795548"
                android:layout_height="wrap_content"
                android:id="@+id/titleTextView" app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" tools:text="TextView" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/writerTextView"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/titleTextView" tools:text="TextView"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>