<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ScondActivity">

    <ImageView
            android:background="@drawable/omdb"
            android:contentDescription="@string/omdbdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/omdbImageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="106dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="204dp"
            app:layout_constraintBottom_toTopOf="@+id/getStartButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <Button
            android:background="@drawable/get"
            android:layout_width="204dp"
            android:layout_height="66dp"
            android:id="@+id/getStartButton"
            app:layout_constraintTop_toBottomOf="@+id/omdbImageView" android:layout_marginBottom="58dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>